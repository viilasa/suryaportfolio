---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

const projects = [
    {
        title: 'ProofEdge',
        description: 'Social proof widgets that boost website conversions with real-time notifications.',
        image: 'https://res.cloudinary.com/ddhhlkyut/image/upload/v1747902976/Hero_2_t6lmp8.png',
        link: 'https://proofedge.io',
        tags: ['React', 'Node.js', 'PostgreSQL', 'SaaS'],
    },
];
---

<BaseLayout 
    title="Portfolio"
    description="Projects and products built by Surya Narayan. SaaS products, web applications, and more."
>
    <Navbar />
    
    <main class="pt-32 pb-20 px-6">
        <div class="container mx-auto max-w-5xl">
            <div class="text-center mb-12">
                <p class="text-emerald-600 font-medium mb-2">My Work</p>
                <h1 class="text-4xl font-bold text-zinc-900 mb-4">Portfolio</h1>
                <p class="text-zinc-600 max-w-xl mx-auto">
                    Products and projects I've built from idea to launch.
                </p>
            </div>
            
            <div class="grid md:grid-cols-2 gap-8">
                {projects.map((project) => (
                    <a 
                        href={project.link}
                        target="_blank"
                        class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-lg transition-all hover-lift"
                    >
                        <div class="aspect-video overflow-hidden">
                            <img 
                                src={project.image} 
                                alt={project.title}
                                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                            />
                        </div>
                        <div class="p-6">
                            <h3 class="text-xl font-bold text-zinc-900 mb-2 group-hover:text-emerald-600 transition-colors">
                                {project.title}
                            </h3>
                            <p class="text-zinc-600 mb-4">
                                {project.description}
                            </p>
                            <div class="flex flex-wrap gap-2">
                                {project.tags.map((tag) => (
                                    <span class="bg-zinc-100 text-zinc-600 text-xs px-2 py-1 rounded-full">
                                        {tag}
                                    </span>
                                ))}
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </main>
    
    <Footer />
</BaseLayout>
