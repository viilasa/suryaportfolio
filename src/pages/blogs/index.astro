---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';

const allPosts = await getCollection('blogs');
const sortedPosts = allPosts.sort((a, b) => 
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const latestPosts = sortedPosts.slice(0, 3);
const remainingPosts = sortedPosts.slice(3);
---

<BaseLayout 
    title="Blog" 
    description="Ideas, lessons, and stories from my journey as a builder. Insights on indie hacking, SaaS, startup lessons, and building in public."
    keywords="indie hacker blog, SaaS blog, building in public, startup lessons, founder blog"
>
    <Navbar />
    
    <main class="pt-24 pb-16">
        <div class="container mx-auto px-6">
            <!-- Header -->
            <div class="text-center mb-12">
                <p class="text-emerald-600 font-medium mb-2">Thoughts & Learnings</p>
                <h1 class="text-4xl md:text-5xl font-bold text-zinc-900 mb-4">Blog</h1>
                <p class="text-zinc-600 max-w-xl mx-auto">
                    Ideas, lessons, and stories from my journey as a builder.
                </p>
            </div>
            
            <!-- Hero Section - Latest 3 Posts -->
            {latestPosts.length > 0 && (
                <section class="mb-16">
                    <div class="grid md:grid-cols-2 gap-6">
                        <!-- Main Hero Post -->
                        {latestPosts[0] && (
                            <a 
                                href={`/blogs/${latestPosts[0].slug}`}
                                class="group relative aspect-[4/3] md:aspect-auto md:row-span-2 rounded-2xl overflow-hidden hover-lift"
                            >
                                <img 
                                    src={latestPosts[0].data.image} 
                                    alt={latestPosts[0].data.title}
                                    class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/90 via-zinc-900/40 to-transparent" />
                                <div class="absolute bottom-0 left-0 right-0 p-6 md:p-8">
                                    <span class="inline-block bg-emerald-500 text-white text-xs font-semibold px-3 py-1 rounded-full mb-3">
                                        Latest
                                    </span>
                                    <span class="inline-block bg-zinc-800/80 text-zinc-200 text-xs font-medium px-3 py-1 rounded-full mb-3 ml-2">
                                        {latestPosts[0].data.category}
                                    </span>
                                    <h2 class="text-xl md:text-2xl font-bold text-white mb-2 line-clamp-2">
                                        {latestPosts[0].data.title}
                                    </h2>
                                    <p class="text-zinc-300 text-sm line-clamp-2 mb-3">
                                        {latestPosts[0].data.excerpt}
                                    </p>
                                    <div class="flex items-center gap-4 text-zinc-400 text-sm">
                                        <span>{new Date(latestPosts[0].data.date).toLocaleDateString('en-US', { month: 'long', day: 'numeric', year: 'numeric' })}</span>
                                        {latestPosts[0].data.readTime && <span>{latestPosts[0].data.readTime}</span>}
                                    </div>
                                </div>
                            </a>
                        )}
                        
                        <!-- Secondary Posts -->
                        <div class="flex flex-col gap-6">
                            {latestPosts.slice(1, 3).map((post) => (
                                <a 
                                    href={`/blogs/${post.slug}`}
                                    class="group relative aspect-[16/9] rounded-xl overflow-hidden hover-lift"
                                >
                                    <img 
                                        src={post.data.image} 
                                        alt={post.data.title}
                                        class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                    />
                                    <div class="absolute inset-0 bg-gradient-to-t from-zinc-900/90 via-zinc-900/30 to-transparent" />
                                    <div class="absolute bottom-0 left-0 right-0 p-4">
                                        <span class="inline-block bg-zinc-800/80 text-zinc-200 text-xs font-medium px-2 py-1 rounded-full mb-2">
                                            {post.data.category}
                                        </span>
                                        <h3 class="text-lg font-bold text-white line-clamp-2">
                                            {post.data.title}
                                        </h3>
                                    </div>
                                </a>
                            ))}
                        </div>
                    </div>
                </section>
            )}
            
            <!-- All Posts Grid -->
            {remainingPosts.length > 0 && (
                <section>
                    <h2 class="text-2xl font-bold text-zinc-900 mb-8">All Articles</h2>
                    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
                        {remainingPosts.map((post) => (
                            <a 
                                href={`/blogs/${post.slug}`}
                                class="group bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-all hover-lift"
                            >
                                {post.data.image && (
                                    <div class="aspect-[16/10] overflow-hidden">
                                        <img 
                                            src={post.data.image} 
                                            alt={post.data.title}
                                            class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105"
                                        />
                                    </div>
                                )}
                                <div class="p-5">
                                    <span class="inline-block bg-zinc-100 text-zinc-700 text-xs font-medium px-2 py-1 rounded-full mb-3">
                                        {post.data.category}
                                    </span>
                                    <h3 class="text-lg font-bold text-zinc-900 mb-2 line-clamp-2 group-hover:text-emerald-600 transition-colors">
                                        {post.data.title}
                                    </h3>
                                    <p class="text-zinc-600 text-sm line-clamp-2 mb-3">
                                        {post.data.excerpt}
                                    </p>
                                    <div class="flex items-center gap-3 text-zinc-500 text-xs">
                                        <span>{new Date(post.data.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                                        {post.data.readTime && <span>{post.data.readTime}</span>}
                                    </div>
                                </div>
                            </a>
                        ))}
                    </div>
                </section>
            )}
        </div>
    </main>
    
    <Footer />
</BaseLayout>
